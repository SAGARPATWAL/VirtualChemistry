<UserControl x:Class="VirtualChemistry.Views.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualChemistry.Views"
             mc:Ignorable="d" 
             >
    <Grid>
            <TextBlock Padding="20,5,0,5" Text="Status" FontFamily="{DynamicResource sideBarFontFamily}" FontWeight="Bold" FontStyle="Italic" FontSize="21.333">
            <TextBlock.Background>
                <SolidColorBrush Color="{DynamicResource GridHeadingColor}"/>
            </TextBlock.Background>
        </TextBlock>
    </Grid>
</UserControl>
